{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tidyf",
  "title": "Tidyf",
  "description": "AI-powered file organizer for your Mac",
  "icon": "command-icon.png",
  "commands": [
    {
      "name": "organize-command",
      "title": "Organize Files",
      "description": "Organize a folder using AI",
      "mode": "view",
      "icon": "command-icon.png"
    },
    {
      "name": "quick-tidy",
      "title": "Quick Tidy Downloads",
      "description": "Instantly organize your Downloads folder",
      "mode": "no-view",
      "icon": "command-icon.png"
    }
  ],
  "author": "thomas",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "dependencies": {
    "@raycast/api": "^1.64.4",
    "@raycast/utils": "^1.12.4",
    "fix-path": "^5.0.0",
    "sharp": "^0.34.5",
    "tidyf": "file:../../"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "^18.3.3",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "@types/react": "^18.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
