{
  "platforms": ["macOS"],
	"$schema": "https://www.raycast.com/schemas/extension.json",
	"name": "tidyf",
	"version": "1.0.0",
	"title": "Tidyf",
	"description": "AI-powered file organizer for your Mac",
	"icon": "command-icon.png",
	"keywords": [
		"file",
		"organizer",
		"ai",
		"tidy",
		"downloads",
		"automation",
		"cleanup"
	],
	"commands": [
		{
			"name": "organize-command",
			"title": "Organize Files",
			"description": "Organize a folder using AI",
			"mode": "view",
			"icon": "command-icon.png"
		},
		{
			"name": "quick-tidy",
			"title": "Quick Tidy Downloads",
			"description": "Instantly organize your Downloads folder",
			"mode": "no-view",
			"icon": "command-icon.png"
		},
		{
			"name": "history-command",
			"title": "View Organization History",
			"description": "View and undo recent file organization operations",
			"mode": "view",
			"icon": "command-icon.png"
		}
	],
	"author": "yfyx",
	"categories": [
		"Productivity",
		"System"
	],
	"license": "MIT",
	"dependencies": {
    "@raycast/api": "^1.104.1",
		"@raycast/utils": "^1.12.4",
   "@opencode-ai/sdk": "^1.0.155",
		"fix-path": "^5.0.0",
   "mime-types": "^2.1.35"
	},
	"devDependencies": {
		"@raycast/eslint-config": "^1.0.6",
   "@types/mime-types": "^2.1.4",
		"@types/node": "20.8.10",
		"@types/react": "^18.3.3",
		"eslint": "^8.51.0",
		"prettier": "^3.0.3",
		"typescript": "^5.2.2"
	},
	"overrides": {
		"@types/react": "^18.3.3"
	},
	"scripts": {
		"build": "ray build -e dist",
		"dev": "ray develop",
		"fix-lint": "ray lint --fix",
		"lint": "ray lint",
		"publish": "npx @raycast/api@latest publish"
	}
}
