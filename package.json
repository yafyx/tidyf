{
	"name": "tidyf",
	"version": "1.1.1",
	"description": "AI-powered file organizer using opencode.ai",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"tidyf": "./dist/cli.js",
		"td": "./dist/cli.js",
		"tidyfiles": "./dist/cli.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yafyx/tidyf.git"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"start": "node dist/cli.js",
		"dev": "bun --watch src/cli.ts",
		"build": "bun build src/cli.ts --outdir=dist --target=node --format=esm && bun build src/index.ts --outdir=dist --target=node --format=esm",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "bun run build"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"file-organizer",
		"ai",
		"opencode",
		"cli",
		"downloads",
		"tidy",
		"automation"
	],
	"author": "",
	"license": "MIT",
	"files": [
		"dist",
		"src"
	],
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"@opencode-ai/sdk": "^1.0.155",
		"chokidar": "^3.5.3",
		"commander": "^12.1.0",
		"mime-types": "^2.1.35",
		"picocolors": "^1.1.1",
		"semver": "^7.7.3"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/mime-types": "^2.1.4",
		"@types/semver": "^7.7.1",
		"typescript": "^5.7.2"
	}
}
